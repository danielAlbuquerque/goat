

<div class="content-wrapper">
  <section class="content-header">
    <h1>
      <%=@member.first_name%> <%=@member.last_name%> 
      <small>cadastro de dependentes</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="#"><i class="fa fa-dashboard"></i> Membros</a></li>
      <li class="active">Dependentes</li>
    </ol>
  </section>

  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Dependentes</h3>
            <div class="box-tools">

            </div>
          </div><!-- /.box-header -->

          <div class="box-body">
            <div class="box-body">
              <% if @dependents.present? %>
              <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th>CPF</th>
                      <th>RG</th>
                      <th>Parentesco</th>
                      <th class="col-sm-2">Opções</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@dependents.each do |d|%>
                    <tr>
                      <td><%=d.full_name%></td>
                      <td><%=d.cpf%></td>
                      <td><%=d.rg%></td>
                      <td><%=d.relationship%></td>
                      <td>

                        <div class="btn-group">
                          <%= link_to "Visualizar" ,member_dependent_path(id: d.id), class: "btn btn-primary btn-flat" %>
                          <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <li><%= link_to "Atualizar informações", edit_member_dependent_path(id: d.id)%></li>
                            <li><%= link_to "Excluir", member_dependent_path(id: d.id), method: :delete, data: {confirm: 'Tem certeza?'} %></li>
                          </ul>
                        </div>


                      </td>
                    </tr>


                    <% end %>

                  </tbody>

                </table>
              <% else %>
                <div class="callout callout-success">
                  <p>Nenhum dependente encontrado</p>
                </div>
              <% end %>




            </div>
          </div>

          <div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
              <li><a href="#">&laquo;</a></li>
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">&raquo;</a></li>
            </ul>
          </div>


        </div>
      </div>
    </div>
  </section>
</div>
