<div class="content-wrapper">

  <section class="content-header">
    <h1>
      Abertura de caixa
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/cashiers"><i class="fa fa-dashboard"></i> Caixa</a></li>
      <li class="active">Abertura de caixa</li>
    </ol>
  </section>

  <section class="content">
       <%= form_for @cashier, url: "/cashiers/open" do |f| %>
         <div class='box box-default color-palette-box'>
           <div class='box-header with-border'>
             <h3 class='box-title'> Informações</h3>
           </div>
           <div class='box-body'>
             <div class="row">
               <div class="col-xs-9">
                 <label>Descrição(não obrigatório):</label>
                 <%= f.text_field :description, class: "form-control", placeholder: "Descrição do caixa..."%>
               </div>
               <div class="col-xs-3">
                 <label>Saldo(R$):</label>
                 <%= f.text_field :current_cash, class: "form-control", placeholder: "Saldo em caixa", required: true%>
               </div>
             </div>
             <hr>
             <%= link_to "Cancelar", :back, class: "btn btn-danger btn-flat" %>
             <%= f.submit "Salvar", class: "btn btn-primary btn-flat"%>
           </div><!-- /.box-body -->
         </div><!-- /.box -->
       <% end %>

  </section>
</div>
